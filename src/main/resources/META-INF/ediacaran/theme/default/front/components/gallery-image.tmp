<li class="item-thumbs col-sm-12 col-md-6 col-lg-{cols} col-xl-{cols}" data-id="{id}-{index}" data-type="{filter}">
	<a class="hover-wrap fancybox" data-fancybox-group="{id}" title="{title}" href="{src}"> 
		<span class="overlay-img"></span> 
		<span class="overlay-img-thumb fa fa-plus"></span>
	</a>
	<img src="{icon}" alt="{text}">
</li>
