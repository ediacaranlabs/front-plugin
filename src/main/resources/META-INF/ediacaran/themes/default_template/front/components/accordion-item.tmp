<div class="card"> 
	<div class="card-header"  
		id="heading{id}">  
		<a class="btn btn-link text-left btn-block collapsed" data-toggle="collapse"  
			data-target="#collapse{id}"  
			aria-expanded="false"  
			aria-controls="collapse{id}">
			<i class="fa fa-plus plus-button"></i>  
			<i class="fa fa-minus minus-button"></i>  
			{title} </a>  
	</div>  
	<div id="collapse{id}"  
		class="collapse{show}"  
		aria-labelledby="heading{id}"  
		data-parent="#{parentID}">  
		<div class="card-body"> 
           {content} 
		</div>  
	</div>  
</div>
