<div {attr} class="btn-group {classStyle} {style} {variation}">
  <button type="button" class="btn {type} {size}>
    {label}
  </button>
  <button type="button" class="btn {type} {size} dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <span class="sr-only">Toggle Dropdown</span>
  </button>
  <div class="dropdown-menu">
  	{content}
  </div>
</div>