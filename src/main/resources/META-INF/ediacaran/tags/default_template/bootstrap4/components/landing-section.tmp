<a name="{name}"></a>
<div {attr} class="content-section">
	<div class="container">
		<div class="row">
			<div class="col-lg-5 col-sm-6 {align-left}">
				<hr class="section-heading-spacer">
				<div class="clearfix"></div>
				<h2 class="section-heading">
					{title}
				</h2>
				<p class="lead">
					{content} 
				</p>
			</div>
			<div class="col-lg-5 col-sm-6 text-center {align-right}">
				<img src="{img}">
			</div>
		</div>

	</div>
</div>